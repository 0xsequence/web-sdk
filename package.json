{
  "name": "web-sdk",
  "private": true,
  "license": "Apache-2.0",
  "sideEffects": false,
  "scripts": {
    "build": "turbo run build --filter={packages/*}",
    "build:clean": "turbo run build:clean",
    "dev": "turbo run dev --filter={packages/*}",
    "reinstall": "rimraf -g ./**/node_modules && pnpm install",
    "test": "turbo run test",
    "lint": "eslint -c eslint.config.mjs '{packages,examples}/**/src/**/*.{ts,tsx}'",
    "lint:fix": "eslint -c eslint.config.mjs '{packages,examples}/**/src/**/*.{ts,tsx}' && pnpm run format",
    "format": "prettier --list-different --write './{packages,examples}/*/src/**/*.{ts,tsx}'",
    "audit:fix": "pnpm audit --fix",
    "typecheck": "tsc --noEmit",
    "deps": "pnpx taze -r",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && changeset publish",
    "dev:react": "pnpm --filter example-react dev",
    "debug:react": "DEBUG=true pnpm dev:react",
    "serve:react": "pnpm --filter example-react serve",
    "build:react": "pnpm --filter example-react build",
    "dev:react-boilerplate": "pnpm --filter example-react-boilerplate dev",
    "serve:react-boilerplate": "pnpm --filter example-react-boilerplate serve",
    "build:react-boilerplate": "pnpm --filter example-react-boilerplate build",
    "dev:next": "pnpm --filter example-next dev",
    "serve:next": "pnpm --filter example-next start",
    "build:next": "pnpm --filter example-next build"
  },
  "devDependencies": {
    "@0xsequence/react-connect": "workspace:*",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.25.2",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "eslint": "^9.22.0",
    "eslint-plugin-import": "^2.29.1",
    "ethers": "^6.13.0",
    "prettier": "^3.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^5.0.7",
    "turbo": "2.0.1",
    "typescript": "^5.8.2",
    "wagmi": "^2.14.11"
  },
  "resolutions": {},
  "packageManager": "pnpm@9.0.6",
  "dependencies": {
    "@eslint/js": "^9.22.0",
    "@tailwindcss/cli": "^4.0.6",
    "@tailwindcss/postcss": "^4.0.6",
    "eslint-plugin-react-hooks": "^5.2.0",
    "postcss": "^8",
    "tailwindcss": "^4.0.6",
    "typescript-eslint": "^8.26.1"
  }
}
